<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@android:color/black">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_back"
            android:background="@drawable/remote_button"/>

        <wseemann.media.romote.view.RepeatingImageButton
            android:id="@+id/up_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_collapse"
            android:background="@drawable/remote_button"/>

        <Button
            android:id="@+id/home_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/home"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/remote_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@android:color/black">

        <wseemann.media.romote.view.RepeatingImageButton
            android:id="@+id/left_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_previous_item"
            android:background="@drawable/remote_button"/>

        <Button
            android:id="@+id/select_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/ok"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/remote_button"/>

        <wseemann.media.romote.view.RepeatingImageButton
            android:id="@+id/right_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_next_item"
            android:background="@drawable/remote_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@android:color/black">

        <ImageButton
            android:id="@+id/instant_replay_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_undo"
            android:background="@drawable/remote_button"/>

        <wseemann.media.romote.view.RepeatingImageButton
            android:id="@+id/down_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_expand"
            android:background="@drawable/remote_button"/>

        <ImageButton
            android:id="@+id/info_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_about"
            android:background="@drawable/remote_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@android:color/black">

        <ImageButton
            android:id="@+id/rev_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_rewind"
            android:background="@drawable/remote_button"/>

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_pause"
            android:background="@drawable/remote_button"/>

        <ImageButton
            android:id="@+id/fwd_button"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_action_fast_forward"
            android:background="@drawable/remote_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:paddingTop="4dip"
        android:paddingBottom="2dip"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/keyboard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/keyboard"
            android:src="@drawable/ic_action_keyboard"
            android:background="@drawable/remote_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:orientation="vertical">

        <wseemann.media.romote.view.KeyboardEditText
            android:id="@+id/textbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:hint="Enter text here"/>

    </LinearLayout>

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:visibility="gone"/>

</LinearLayout>